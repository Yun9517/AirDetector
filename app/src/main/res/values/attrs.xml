<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ColorArcProgressBar">
        <attr name="bg_arc_color" format="color" />
        <attr name="degree_color" format="color" />
        <attr name="hint_color" format="color" />
        <attr name="front_color1" format="color" />
        <attr name="front_color2" format="color" />
        <attr name="front_color3" format="color" />

        <attr name="bg_arc_width" format="dimension" />
        <attr name="front_width" format="dimension" />

        <attr name="is_seek_enable" format="boolean" />
        <attr name="is_need_title" format="boolean" />
        <attr name="is_need_content" format="boolean" />
        <attr name="is_need_unit" format="boolean" />
        <attr name="is_need_dial" format="boolean" />

        <attr name="string_title" format="string" />
        <attr name="string_unit" format="string" />

        <attr name="sweep_angle" format="integer" />

        <attr name="current_value" format="float" />
        <attr name="max_value" format="float" />

    </declare-styleable>

    <declare-styleable name="YViewPager">
        <attr name="orientation">
            <enum name="vertical" value="0" />
            <enum name="horizontal" value="1" />
        </attr>
        <attr name="circulatory" format="boolean" />
    </declare-styleable>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="ForegroundRelativeLayout">
        <attr name="foreground" format="reference|color" />
    </declare-styleable>

    <!-- 自定义星期 View -->
    <declare-styleable name="WeekView">
        <attr name="wv_textColor" format="color|reference"/>
        <attr name="wv_textSize" format="dimension|reference"/>
    </declare-styleable>

    <!-- 自定义日历 View -->
    <declare-styleable name="CalendarView">
        <attr name="cv_textColor" format="color|reference"/>
        <attr name="cv_selectTextColor" format="color|reference"/>
        <attr name="cv_textSize" format="dimension|reference"/>
        <attr name="cv_selectTextSize" format="dimension|reference"/>
        <attr name="cv_dayBackground" format="reference"/>
        <attr name="cv_selectDayBackground" format="reference"/>
        <attr name="cv_dateFormatPattern" format="string|reference"/>
        <attr name="cv_isChangeDateStatus" format="boolean|reference"/>
    </declare-styleable>

</resources>