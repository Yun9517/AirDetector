<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="?attr/colorPrimaryDark"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="5dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_bt_status"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/app_android_icon_disconnect" />

        <TextView
            android:id="@+id/txt_devname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="@string/No_Device_Connect"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/progressBarMidColor"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="end|bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_Account_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_Deactivation"
            android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>