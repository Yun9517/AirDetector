<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d1d1d3"
    android:scrollbars="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="true"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f5f5"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/itemPrivacy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/style_setting_button_long"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textAllowPrivacy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="@string/text_setting_allow_privacy"
                    android:textColor="@color/blackColor"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageArrow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    app:srcCompat="@drawable/ic_keyboard_arrow_right_24dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/subDivider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:background="#b0b0b0"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/itemDeviceNotify"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/style_setting_button_long"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textAllowNotify"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="@string/text_setting_allow_notification"
                    android:textColor="@color/blackColor"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageArrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    app:srcCompat="@drawable/ic_keyboard_arrow_right_24dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/subDivider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:background="#b0b0b0"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/itemCloudNotify"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/style_setting_button_long"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textAllowCloudNotify"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="@string/text_cloud_notify"
                        android:textColor="@color/blackColor"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/text_cloud_notification_func_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="@string/text_cloud_notify_comment"
                        android:textColor="#6d6d72"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageArrow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    app:srcCompat="@drawable/ic_keyboard_arrow_right_24dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/mainDivider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#b0b0b0"
                android:visibility="visible" />

        </LinearLayout>


        <ImageView
            android:id="@+id/groupDivider"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#d1d1d3"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/mainDivider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b0b0b0"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/itemCloudSync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/style_setting_button_long"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_cloud_fun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="@string/cloud_fun"
                    android:textColor="@color/blackColor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_cloud_func_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="false"
                    android:singleLine="false"
                    android:text="@string/cloud_func_comment"
                    android:textColor="#6d6d72"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageArrow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/ic_keyboard_arrow_right_24dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/mainDivider5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b0b0b0"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/groupDivider2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#d1d1d3"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f5f5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mainDivider6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#b0b0b0"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/deviceControl1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f5f5f5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="@string/led_light"
                    android:textColor="@color/blackColor"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/ledPower"
                    app:layout_constraintEnd_toStartOf="@+id/ledPower"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ledPower" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/ledPower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:theme="@style/SwitchCompatTheme"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/groupDivider2" />

            </LinearLayout>

            <ImageView
                android:id="@+id/subDivider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:background="#b0b0b0"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/deviceControl2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f5f5f5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="@string/led_light_disconnect"
                    android:textColor="@color/blackColor"
                    android:textSize="18sp" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/ledDisconnectPower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:theme="@style/SwitchCompatTheme" />
            </LinearLayout>

            <ImageView
                android:id="@+id/subDivider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:background="#b0b0b0"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/deviceControl3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f5f5f5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_device_ver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="@string/text_label_device_version"
                        android:textColor="@color/blackColor"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/text_device_ver_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="@string/text_label_device_version_detail"
                        android:textColor="#6d6d72"
                        android:textSize="14sp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnCheckFW"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/style_setting_button"
                    android:text="@string/text_check_device_update"
                    android:textColor="@color/whiteColor"
                    android:textSize="12sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/mainDivider7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#b0b0b0"
                android:visibility="visible" />

        </LinearLayout>

        <ImageView
            android:id="@+id/groupDivider4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#d1d1d3"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/mainDivider8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b0b0b0"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f5f5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="16dp"
                    android:text="@string/text_allow_service_run_in_foreground"
                    android:textColor="@color/blackColor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView18_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="false"
                    android:singleLine="false"
                    android:text="@string/text_allow_service_run_in_foreground_comment"
                    android:textColor="#6d6d72"
                    android:textSize="14sp" />
            </LinearLayout>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/swAllowServiceForeground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:theme="@style/SwitchCompatTheme" />

        </LinearLayout>

        <ImageView
            android:id="@+id/mainDivider9"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="0dp"
            android:background="#b0b0b0"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_app_ver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:text="@string/show_app_version"
                android:textColor="@color/blackColor"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/mainDivider10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b0b0b0"
            android:visibility="visible" />

        <Button
            android:id="@+id/dataExport"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="#f5f5f5"
            android:text="@string/dataExport"
            android:textColor="#f32091"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/mainDivider11"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="64dp"
            android:background="#b0b0b0"
            android:visibility="visible" />

    </LinearLayout>

</ScrollView>