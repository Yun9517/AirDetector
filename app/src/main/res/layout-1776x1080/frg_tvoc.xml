    </LinearLayout>

    <ProgressBar
        android:id="@+id/chartDataLoading"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/data_Loading"
        android:gravity="center_horizontal|fill_horizontal"
        android:text="@string/text_default_value"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="normal" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textVSelectDetectionTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal|fill_horizontal"
            android:text="@string/text_default_value"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/chart_Refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textVSelectDetectionTime"
            android:background="@drawable/chart_update_icon_disconnect"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textVSelectDetectionValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|fill_vertical"
            android:text="@string/text_default_value"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@string/text_label_tvoc"
            android:textColor="@color/whiteColor"
            android:background="@drawable/chart_subtitle"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_alignRight="@+id/textVSelectDetectionValue"
            android:textSize="14sp"
            android:textStyle="normal"
            android:layout_gravity="end"
            android:textAlignment="gravity" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView3"
                android:layout_alignParentBottom="false"
                android:layout_alignParentStart="true"
                android:text="(ppb)" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="true"
                android:text="660" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView4"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="true"
                android:text="220" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:src="@color/progressBarEndColor" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:src="@color/progressBarMidColor" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_above="@+id/imageView6"
                android:layout_alignParentEnd="true"
                android:src="@color/progressBarStartColor" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="false"
                android:src="@android:color/transparent" />
        </RelativeLayout>

        <com.microjet.airqi2.CustomAPI.FixBarChart
            android:id="@+id/chart_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.microjet.airqi2.CustomAPI.FixBarChart>
    </LinearLayout>

</LinearLayout>
