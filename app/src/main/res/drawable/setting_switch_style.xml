<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="#89b7e4" />

            <stroke
                android:color="@color/whiteColor"
                android:width="3dp"/>

            <corners
                android:radius="20dp" />

            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#757575" />

            <stroke
                android:color="@color/whiteColor"
                android:width="3dp"/>

            <corners
                android:radius="20dp" />

            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>