<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#007e6a" />

            <stroke
                android:color="@color/whiteColor"
                android:width="1dp"/>

            <corners
                android:radius="12dp" />

            <padding
                android:left="5dp"
                android:right="5dp"
                android:top="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#76d5c6" />

            <stroke
                android:color="@color/whiteColor"
                android:width="1dp"/>

            <corners
                android:radius="12dp" />

            <padding
                android:left="5dp"
                android:right="5dp"
                android:top="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
</selector>